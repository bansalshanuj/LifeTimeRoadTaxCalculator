<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.development.shanujbansal.lifetimeroadtaxcalculator.InfoActivity">

    <TextView
        android:textColor="@color/material_blue_grey_950"
        android:layout_width="wrap_content"
        android:layout_weight="0.8"
        android:layout_height="0dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="This application calculates the road tax of the vehicle (new or existing) in the region of Karnataka."
        android:id="@+id/textViewInfo1"/>

    <ImageView
        android:layout_marginBottom="7dp"
        android:layout_weight="2.70"
        android:layout_width="370px"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:background="@drawable/background"
        android:alpha="255"/>

    <TextView
        android:textColor="@color/material_blue_grey_950"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1.50"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Disclaimer: Tax calculations are indicative only.\nFinal amount calculated by RTO may differ from the calculated amount."
        android:id="@+id/textViewInfo2" />

</LinearLayout>
